<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/title_data_penanaman"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="@string/data_penanaman"
        android:textStyle="bold"
        style="@style/TitleMediumBold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_data_penanaman"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="5dp"
        android:padding="20dp"
        android:backgroundTint="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_data_penanaman">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp"
                android:baselineAligned="false">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingEnd="16dp"
                    android:paddingStart="0dp"
                    android:orientation="vertical">

                    <TextView
                        style="@style/BodyLargeBold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/bibit"/>

                    <TextView
                        android:id="@+id/nama_bibit"
                        style="@style/BodyMedium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/nama_bibit"
                        android:layout_marginBottom="14dp"/>

                    <TextView
                        style="@style/BodyLargeBold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/luas"/>

                    <TextView
                        android:id="@+id/luas_lahan"
                        style="@style/BodyMedium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/luas"
                        android:layout_marginBottom="10dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingEnd="16dp"
                    android:paddingStart="0dp"
                    android:orientation="vertical">

                    <TextView
                        style="@style/BodyLargeBold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/alamat"/>

                    <TextView
                        android:id="@+id/alamat_lahan"
                        style="@style/BodyMedium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/alamat"
                        android:layout_marginBottom="14dp"/>

                    <TextView
                        style="@style/BodyLargeBold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/minggu_ke"/>

                    <TextView
                        android:id="@+id/minggu_ke"
                        style="@style/BodyMedium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/minggu_ke"
                        android:layout_marginBottom="10dp"/>
                </LinearLayout>
            </LinearLayout>

            <Button
                android:id="@+id/button_kelola_keuangan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:backgroundTint="@color/accient"
                android:text="@string/kelola_keuangan"
                android:textStyle="bold"
                style="@style/BodyLarge"
                android:textColor="@color/white"
                android:layout_marginHorizontal="16dp"
                app:cornerRadius="10dp"/>

            <Button
                android:id="@+id/button_panen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:backgroundTint="@color/primary_green"
                android:text="@string/panen"
                android:layout_marginHorizontal="16dp"
                android:textStyle="bold"
                style="@style/BodyLarge"
                android:textColor="@color/white"
                app:cornerRadius="10dp"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/title_informasi_perawatan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="10dp"
        android:text="@string/informasi_perawatan"
        android:textStyle="bold"
        style="@style/TitleMediumBold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/card_data_penanaman"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/informasi_perawatan_rv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_informasi_perawatan"
        app:layout_constraintVertical_bias="0.0"
        tools:listitem="@layout/informasi_penanaman_item" />

</androidx.constraintlayout.widget.ConstraintLayout>
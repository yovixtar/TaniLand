<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.TaniLand" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.TaniLand" parent="Base.Theme.TaniLand">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_green</item>
        <item name="colorPrimaryVariant">@color/primary_teal</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary_purple</item>
        <item name="colorSecondaryVariant">@color/ternary_yellow</item>
        <item name="colorOnSecondary">@color/white</item>
        <!--        &lt;!&ndash; Status bar color. &ndash;&gt;-->
        <!--        <item name="android:statusBarColor">@color/yourColor</item>-->
        <!--        <item name="android:windowLightStatusBar">false</item>-->
    </style>




    <!-- Typografi -->

    <!-- Base Styles -->
    <style name="Body">
        <item name="android:textColor">@color/textcolor_body</item>
    </style>

    <style name="Title">
        <item name="android:textColor">@color/textcolor_title</item>
    </style>

    <style name="Heading">
        <item name="android:textColor">@color/textcolor_heading</item>
    </style>

    <!-- Body Styles -->
    <style name="BodyTiny" parent="Body">
        <item name="android:textSize">8sp</item>
    </style>

    <style name="BodySmall" parent="Body">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="BodyMedium" parent="Body">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="BodyLarge" parent="Body">
        <item name="android:textSize">14sp</item>
    </style>

    <!-- Body Bold Styles -->
    <style name="BodyTinyBold" parent="BodyTiny">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BodySmallBold" parent="BodySmall">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BodyMediumBold" parent="BodyMedium">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BodyLargeBold" parent="BodyLarge">
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Title Styles -->
    <style name="TitleSmall" parent="Title">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TitleMedium" parent="Title">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TitleLarge" parent="Title">
        <item name="android:textSize">20sp</item>
    </style>

    <!-- Title Bold Styles -->
    <style name="TitleSmallBold" parent="TitleSmall">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TitleMediumBold" parent="TitleMedium">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TitleLargeBold" parent="TitleLarge">
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Heading Styles -->
    <style name="HeadingSmall" parent="Heading">
        <item name="android:textSize">22sp</item>
    </style>

    <style name="HeadingMedium" parent="Heading">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="HeadingLarge" parent="Heading">
        <item name="android:textSize">26sp</item>
    </style>

    <!-- Heading Bold Styles -->
    <style name="HeadingSmallBold" parent="HeadingSmall">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="HeadingMediumBold" parent="HeadingMedium">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="HeadingLargeBold" parent="HeadingLarge">
        <item name="android:textStyle">bold</item>
    </style>

</resources>